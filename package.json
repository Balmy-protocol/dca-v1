{
  "name": "dca",
  "version": "0.0.0",
  "description": "Decentralized cost averaging",
  "keywords": [
    "ethereum",
    "smart",
    "contracts",
    "test",
    "solidity",
    "hardhat"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alejoamiras/dca-ts.git"
  },
  "license": "",
  "scripts": {
    "commit": "git-cz",
    "compile": "npx hardhat compile",
    "coverage": "npx hardhat coverage",
    "fork": "FORK=true npx hardhat node",
    "fork:script": "FORK=true npx hardhat run",
    "fork:test": "FORK=true npx hardhat test",
    "lint:check": "solhint 'contracts/**/*.sol' 'interfaces/**/*.sol' && prettier --check './**'",
    "lint:fix": "sort-package-json && prettier --write './**' && solhint --fix 'contracts/**/*.sol' 'interfaces/**/*.sol'",
    "release": "standard-version",
    "test": "TEST=true hardhat compile && TEST=true mocha",
    "test:e2e": "npm run test 'test/e2e/**/*.spec.ts'",
    "test:e2e:gas": "REPORT_GAS=1 npm run test:e2e",
    "test:gas": "REPORT_GAS=1 npm run test",
    "test:unit": "npm run test 'test/unit/**/*.spec.ts'",
    "test:unit:gas": "TEST=true REPORT_GAS=1 npx hardhat test",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "dependencies": {
    "@openzeppelin/contracts": "3.4.1",
    "@uniswap/v2-core": "1.0.1",
    "@uniswap/v2-periphery": "1.1.0-beta.0"
  },
  "devDependencies": {
    "@commitlint/cli": "12.0.1",
    "@commitlint/config-conventional": "12.0.1",
    "@nomiclabs/hardhat-ethers": "2.0.2",
    "@nomiclabs/hardhat-etherscan": "2.1.1",
    "@nomiclabs/hardhat-waffle": "2.0.1",
    "@types/chai": "4.2.15",
    "@types/chai-as-promised": "7.1.3",
    "@types/mocha": "8.2.1",
    "@types/node": "14.14.35",
    "axios": "0.21.1",
    "chai": "4.3.4",
    "chai-as-promised": "7.1.1",
    "dotenv": "8.2.0",
    "ethereum-waffle": "3.3.0",
    "ethers": "5.0.32",
    "hardhat": "2.1.2",
    "hardhat-gas-reporter": "1.0.4",
    "hardhat-preprocessor": "0.1.2",
    "husky": "^6.0.0",
    "moment": "2.29.1",
    "pinst": "2.1.6",
    "prettier": "2.2.1",
    "prettier-plugin-solidity": "1.0.0-beta.6",
    "solhint": "3.3.4",
    "solhint-plugin-prettier": "0.0.5",
    "solidity-coverage": "0.7.16",
    "sort-package-json": "1.49.0",
    "standard-version": "9.1.1",
    "ts-node": "9.1.1",
    "typescript": "4.2.3"
  },
  "authors": [
    {
      "name": "Alejo Amiras",
      "url": "https://github.com/alejoamiras"
    },
    {
      "name": "Nicol√°s Chamo",
      "url": "https://github.com/nchamo"
    }
  ]
}
