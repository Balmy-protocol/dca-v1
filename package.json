{
  "name": "ddca",
  "version": "0.0.0",
  "description": "DDCA",
  "keywords": [
    "ethereum",
    "smart",
    "contracts",
    "test",
    "solidity",
    "hardhat"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alejoamiras/ddca-ts.git"
  },
  "author": {
    "name": "Alejo Amiras",
    "email": "alejo.amiras@gmail.com",
    "url": "https://github.com/alejoamiras"
  },
  "scripts": {
    "commit": "git-cz",
    "compile": "npx hardhat compile",
    "coverage": "npx hardhat coverage",
    "fork": "FORK=true npx hardhat node",
    "fork:script": "FORK=true npx hardhat run",
    "fork:test": "FORK=true npx hardhat test",
    "ganache:mainnet": "ganache-cli --fork https://mainnet.infura.io/v3/$INFURA_API_KEY --account=\"$ETH_PRIVATE_KEY,1000000000000000000000\"",
    "lint": "npx hardhat check",
    "lint:fix": "prettier --write 'contracts/**/*.sol'",
    "release": "standard-version",
    "test": "npx hardhat test",
    "test:gas": "REPORT_GAS=1 npx hardhat test"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint:fix && git add -A"
    }
  },
  "dependencies": {
    "@openzeppelin/contracts": "3.3.0",
    "@uniswap/v2-periphery": "^1.1.0-beta.0"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "2.0.1",
    "@nomiclabs/hardhat-etherscan": "2.1.0",
    "@nomiclabs/hardhat-ganache": "2.0.0",
    "@nomiclabs/hardhat-solhint": "2.0.0",
    "@nomiclabs/hardhat-waffle": "2.0.1",
    "@types/chai": "4.2.14",
    "@types/mocha": "8.2.0",
    "@types/node": "14.14.22",
    "chai": "4.2.0",
    "commitizen": "4.2.3",
    "cz-conventional-changelog": "3.3.0",
    "ethereum-waffle": "3.2.1",
    "ethers": "5.0.26",
    "hardhat": "2.0.8",
    "hardhat-gas-reporter": "1.0.4",
    "hardhat-preprocessor": "0.1.1",
    "husky": "^4.3.8",
    "prettier": "2.2.1",
    "prettier-plugin-solidity": "1.0.0-beta.3",
    "solhint": "3.3.2",
    "solhint-plugin-prettier": "0.0.5",
    "solidity-coverage": "0.7.14",
    "standard-version": "9.1.0",
    "ts-node": "9.1.1",
    "typescript": "4.1.3"
  }
}
